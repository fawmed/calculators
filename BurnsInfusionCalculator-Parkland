  <script>
    document.getElementById("calculateButton").addEventListener("click", function () {
      const burnsWeight = parseFloat(document.getElementById("burnsWeight").value);
      const infusionAmount = calculateInfusionAmount(burnsWeight);
      document.getElementById("result").innerHTML = `IV Fluid Infusion Amount: ${infusionAmount.toFixed(2)} mL/hour`;
    });

    function calculateInfusionAmount(weight) {
      // Implement Parkland's formula calculation here
      // Formula: mL/hour = 4 mL * weight in kg * %TBSA burned
      // In this example, let's assume a constant %TBSA burned of 0.5 for demonstration
      const tbsa = 0.5;
      const infusionAmount = 4 * weight * tbsa;
      return infusionAmount;
    }
  </script>
